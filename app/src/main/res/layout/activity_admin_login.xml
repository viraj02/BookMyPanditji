<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.virajjoshi.bookmypanditji.AdminLogin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pandit Login"
        android:gravity="center"
        android:id="@+id/textView4" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/phoneauth"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/imageView4" />


    <EditText
        android:id="@+id/EmailAdmin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="133dp"
        android:hint="Email"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/PasswordAdmin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/AdminLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Login"
        android:layout_below="@+id/PasswordAdmin"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />




</RelativeLayout>
