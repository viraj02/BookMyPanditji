<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.virajjoshi.bookmypanditji.UserProfile">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/unnamed"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#b1accdd7"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Gmail"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:id="@+id/textView7" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="value1"
            android:inputType="textEmailAddress"
            android:background="#ffffff"
            android:id="@+id/emailText"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="ID"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="41dp"
            android:id="@+id/textView8" />


        <TextView
            android:inputType="text"
            android:id="@+id/useridText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value2"
            android:background="#ffffff"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignStart="@+id/emailText"
            android:layout_alignEnd="@+id/emailText" />


        <Button
            android:id="@+id/orderbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="My Orders"
            android:onClick="myorders"
            android:background="#ffffff"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SignOut"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:background="#ffffff"
            android:id="@+id/signoutrbutton"
            android:onClick="signOut"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/orderbutton"
            android:layout_alignParentStart="true" />




        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Delete Account"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:background="#ffffff"
            android:onClick="DeleteAccount"
            android:id="@+id/button2"
            android:layout_below="@+id/signoutrbutton"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />


    </RelativeLayout>


</RelativeLayout>
