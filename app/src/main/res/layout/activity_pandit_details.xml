<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.virajjoshi.bookmypanditji.PanditDetails">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonChoose"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#d91dc9d2"

            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Choose Photo"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:inputType="textPersonName"
            android:hint="Enter your name"
            android:layout_below="@+id/buttonChoose"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewDOB"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="fill"
            android:paddingLeft="5dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:hint="DOB" />

        <EditText
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewDOB"
            android:hint="Address" />

        <EditText
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"

            android:inputType="textEmailAddress"
            android:layout_below="@+id/textViewAddress"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/textViewMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:layout_below="@+id/textViewEmail"
            android:layout_alignParentStart="true" />


        <EditText
            android:id="@+id/textViewExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Experience"
            android:inputType="number"
            android:layout_below="@+id/textViewMobile"
            android:layout_alignParentStart="true" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewExp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d91dc9d2"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Upload" />



        <TextView
            android:id="@+id/textViewShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="View Uploads"

            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

    </LinearLayout>



</RelativeLayout>
